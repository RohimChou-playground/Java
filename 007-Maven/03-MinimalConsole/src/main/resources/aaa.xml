<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="user1" class="com.rohim.consoleapp.UserModel">
        <property name="id" value="1" />
        <property name="name" value="rohim" />
        <property name="age" value="22" />
        <property name="role" ref="role2" />
    </bean>

    <bean id="role1" class="com.rohim.consoleapp.RoleModel">
        <property name="id" value="1" />
        <property name="name" value="admin" />
    </bean>

    <bean id="role2" class="com.rohim.consoleapp.RoleModel">
        <property name="id" value="2" />
        <property name="name" value="manager" />
    </bean>
</beans>